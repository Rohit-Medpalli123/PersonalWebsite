---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import { ironManImages } from './experience.astro';

const experienceEntry = await getEntry('experience', 'experience');
const { experiences, education } = experienceEntry.data;

const technicalEntry = await getEntry('skills', 'technical');
const { title, skills } = technicalEntry.data;
---

<Layout title="SDET Portfolio - Home">
  <div class="container mx-auto px-4">
    <!-- Hero Section -->
    <section class="py-20 text-center">
      <div class="space-y-6" data-aos="fade-up">
        <h1 class="text-4xl md:text-6xl font-bold">
          <span class="text-cyan-400">&gt;</span> Rohit
          <span class="text-cyan-400">_</span>
        </h1>
        <h2 class="text-2xl text-cyan-400 mb-4">Senior Software Development Engineer in Test</h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Passionate SDET with expertise in test automation, performance testing, and quality assurance.
          Specialized in creating robust test frameworks and ensuring software reliability.
        </p>
        <div class="flex justify-center space-x-4">
          <a href="/PersonalWebsite/RohitResumeSDET.pdf" class="bg-red-600 hover:bg-red-700 px-6 py-3 rounded-lg transition-colors flex items-center space-x-2" download>
            <span>Get Resume</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a href="/PersonalWebsite/projects" class="bg-cyan-600 hover:bg-cyan-700 px-6 py-3 rounded-lg transition-colors">
            View Projects
          </a>
          <a href="/PersonalWebsite/contact" class="border border-cyan-600 hover:bg-cyan-600/20 px-6 py-3 rounded-lg transition-colors">
            Contact Me
          </a>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-16 relative">
      <h2 class="text-3xl font-bold mb-12 text-center relative">
        <span class="text-cyan-400 inline-block transform hover:scale-110 transition-transform">#</span> {title}
        <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-600"></div>
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 relative" data-aos="fade-up" data-aos-delay="200">
        {skills.map((skill) => (
          <div class="group relative">
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-xl blur opacity-25 group-hover:opacity-40 transition-opacity"></div>
            <div class="relative bg-gray-900 p-8 rounded-xl border border-gray-800 hover:border-cyan-400 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg hover:shadow-cyan-500/10">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-cyan-400 to-blue-600 flex items-center justify-center mr-4">
                  <span class="text-2xl text-white">{skill.category === 'Testing & Automation' ? 'üîç' : skill.category === 'Development' ? 'üíª' : 'üõ†'}</span>
                </div>
                <h3 class="text-xl font-bold text-cyan-400">{skill.category}</h3>
              </div>
              <ul class="space-y-3">
                {skill.items.map((item) => (
                  <li class="flex items-center text-gray-300 group-hover:text-white transition-colors">
                    <span class="w-2 h-2 rounded-full bg-cyan-400 mr-3 group-hover:bg-cyan-300 transition-colors"></span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Latest Projects Section -->
    <section class="py-16">
      <h2 class="text-3xl font-bold mb-12 text-center relative">
        <span class="text-cyan-400 inline-block transform hover:scale-110 transition-transform">#</span> Latest Investigations
        <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-600"></div>
      </h2>
      <div class="max-w-3xl mx-auto text-center">
        <a href="/PersonalWebsite/projects" class="block group">
          <div class="bg-gray-900 p-8 rounded-xl border border-gray-800 group-hover:border-cyan-400 transition-all duration-300 transform group-hover:-translate-y-1 group-hover:shadow-lg group-hover:shadow-cyan-500/10">
            <p class="text-xl text-gray-300 mb-6">Discover my portfolio of innovative test automation frameworks, performance testing solutions, and comprehensive quality assurance projects that demonstrate my expertise in software testing.</p>
            <div class="flex items-center justify-center space-x-8 text-cyan-400 mb-6">
              <span class="text-3xl">üî¨</span>
              <span class="text-3xl">‚ö°</span>
              <span class="text-3xl">üõ†Ô∏è</span>
            </div>
            <p class="text-lg text-cyan-400 hover:text-cyan-300 transition-colors">Click to explore projects ‚Üí</p>
          </div>
        </a>
      </div>
    </section>

    <!-- Iron Man Timeline Section -->
    <section class="py-16 relative">
      <h2 class="text-3xl font-bold mb-12 text-center relative">
        <span class="text-cyan-400 inline-block transform hover:scale-110 transition-transform">#</span> Career Timeline
        <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-600"></div>
      </h2>
      
      <div class="relative max-w-4xl mx-auto">
        <!-- Vertical line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-gradient-to-b from-cyan-500 to-blue-600"></div>
        
        {/* Experience Timeline */}
        {experiences.map((experience, index) => (
          <div class={`flex items-center mb-24 ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`} data-aos={index % 2 === 0 ? 'fade-right' : 'fade-left'}>
            {/* Timeline node */}
            <div class="w-1/2 flex justify-center">
              <div class="ironman-container group relative">
                <div class="ironman-card w-64 h-80 rounded-xl overflow-hidden border-4 border-cyan-400 transition-all duration-300 group-hover:border-red-500 group-hover:glow">
                  <img 
                    src={`/PersonalWebsite${ironManImages[experiences.length - 1 - index]}`}
                    alt={`${experience.role} at ${experience.company}`}
                    class="w-full h-full object-contain bg-gray-900 p-2 transition-transform duration-500 group-hover:scale-105"
                  />
                </div>
                <div class="absolute inset-0 bg-gradient-radial from-transparent to-cyan-500/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
                <div class="absolute -inset-2 bg-cyan-500/20 rounded-xl blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-pulse"></div>
              </div>
            </div>
            
            {/* Content */}
            <div class={`w-1/2 ${index % 2 === 0 ? 'pl-12' : 'pr-12'}`}>
              <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 hover:border-cyan-400 transition-colors">
                <div class="mb-2">
                  <h3 class="text-xl font-bold text-white">{experience.role}</h3>
                  <h4 class="text-cyan-400">{experience.company}</h4>
                  <p class="text-gray-400 text-sm">{experience.period}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
        
        {/* Engineering Education */}
        <div class="flex items-center" data-aos="fade-left">
          <div class="w-1/2 flex justify-center">
            <div class="ironman-container group relative">
              <div class="ironman-card w-64 h-80 rounded-xl overflow-hidden border-4 border-cyan-400 transition-all duration-300 group-hover:border-red-500 group-hover:glow">
                <img 
                  src="/PersonalWebsite/images/zero.png" 
                  alt="Engineering Education"
                  class="w-full h-full object-contain bg-gray-900 p-2 transition-transform duration-500 group-hover:scale-105"
                />
              </div>
              <div class="absolute inset-0 bg-gradient-radial from-transparent to-cyan-500/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
              <div class="absolute -inset-2 bg-cyan-500/20 rounded-xl blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-pulse"></div>
            </div>
          </div>
          
          <div class="w-1/2 pl-12">
            <div class="bg-gray-800 p-6 rounded-lg border border-gray-700 hover:border-cyan-400 transition-colors">
              <div class="mb-2">
                <h3 class="text-xl font-bold text-white">{education.role}</h3>
                <h4 class="text-cyan-400">{education.company}</h4>
                <p class="text-gray-400 text-sm">{education.period}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Iron Man glow effect */
  .ironman-circle.glow {
    box-shadow: 0 0 15px 5px rgba(30, 144, 255, 0.7), 
                0 0 30px 10px rgba(30, 64, 255, 0.5);
  }
  
  /* Pulse animation */
  @keyframes pulse {
    0% { opacity: 0.4; }
    50% { opacity: 0.8; }
    100% { opacity: 0.4; }
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  /* Radial gradient for hover effect */
  .bg-gradient-radial {
    background-image: radial-gradient(var(--tw-gradient-stops));
  }
</style>
