{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "alt": {
              "type": "string"
            }
          },
          "required": [
            "url",
            "alt"
          ],
          "additionalProperties": false
        },
        "techStack": {
          "type": "object",
          "properties": {
            "language": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "framework": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "reporting": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "cicd": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "language",
            "framework",
            "reporting",
            "cicd"
          ],
          "additionalProperties": false
        },
        "github": {
          "type": "string"
        },
        "demo": {
          "type": "string"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "completed": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "automation",
            "testing",
            "development"
          ]
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "techStack",
        "completed",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}